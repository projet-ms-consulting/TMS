<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link href="{{ asset('/styles/css/home.css')}}" rel="stylesheet" />
            <link
                    rel="stylesheet"
                    href="https://cdn.jsdelivr.net/npm/unpoly@3.7.3/unpoly.min.css"
            />
            <link href="{{ asset('/styles/css/dashboard_layout.css')}}" rel="stylesheet" />
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://cdn.tailwindcss.com"></script>
            <script src="//unpkg.com/alpinejs" defer></script>
            <script src="https://cdn.jsdelivr.net/npm/unpoly@3.7.3/unpoly.min.js"></script>
            <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
            <script
                    src="https://kit.fontawesome.com/e320a50358.js"
                    crossorigin="anonymous"
            ></script>
        {% endblock %}
    </head>
    <body>
    <header>
        <h1>Panel super admin</h1>
        <nav>
            <ul>
                <li><a href="{{ path('super_admin_home') }}">Panel super admin</a></li>
                <li><a href="{{ path('super_admin_address_index') }}">Adresse</a></li>
                <li>
                    <a href="{{ path('super_admin_school_index') }}">École</a>
                </li>
                <li>
                    <a href="{{ path('super_admin_app_person_index') }}">Personne</a>
                </li>
                <li>
                    <a href="{{ path('app_company_index') }}">Entreprise</a>
                </li>
                <li><a href="{{ path('app_home') }}">Retour à la page d'accueil</a></li>
            </ul>
        </nav>
    </header>
    <section>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" style="color: green">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" style="color: red">
                {{ message }}
            </div>
        {% endfor %}
    </section>
    <main class="container">
        {% block body %}{% endblock %}
    </main>
    </body>
</html>
