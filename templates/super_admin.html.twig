<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon"
              href="https://msconsulting-europe.com/wp-content/uploads/2024/05/cropped-logo-square.jpg">
        {% block stylesheets %}
            <link href="{{ asset('/styles/css/home.css')}}" rel="stylesheet" />
            <link href="{{ asset('/styles/css/array.css')}}" rel="stylesheet" />
            <link href="{{ asset('/styles/css/dashboard_layout.css')}}" rel="stylesheet" />
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://cdn.tailwindcss.com"></script>
            <script src="https://kit.fontawesome.com/e320a50358.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
    <header>
        <nav>
            <ul>
                <li><a href="{{ path('super_admin_home') }}">Panel super admin</a></li>
                <li>
                    <a href="{{ path('super_admin_app_person_index') }}">Personnes</a>
                </li>
                <li>
                    <a href="{{ path('super_admin_app_company_employee_index') }}">Employés d'entreprise</a>
                </li>
                <li>
                    <a href="{{ path('super_admin_app_school_employee_index') }}">Employés d'école</a>
                </li>
                <li>
                    <a href="{{ path('super_admin_app_trainee_index') }}">Stagiaires</a>
                </li>
                <li><a href="{{ path('super_admin_address_index') }}">Adresse</a></li>
                <li>
                    <a href="{{ path('super_admin_school_index') }}">Ecole</a>
                </li>
                <li>
                    <a href="{{ path('app_company_index') }}">Entreprise</a>
                </li>

                <li><a href="{{ path('app_home') }}">Retour a la page d'accueil</a></li>
            </ul>
        </nav>
    </header>
    <section>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" style="color: green">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" style="color: red">
                {{ message }}
            </div>
        {% endfor %}
    </section>
    <main class="container">
        {% block body %}{% endblock %}
    </main>
    </body>
</html>
