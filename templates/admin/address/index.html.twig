{% extends 'admin.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbStreet</th>
                <th>Street</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>Dernière modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ address.nbStreet }}</td>
                <td>{{ address.street }}</td>
                <td>{{ address.zipCode }}</td>
                <td>{{ address.city }}</td>
                <td>{% if address.updatedAt != null %}
                        {{ address.updatedAt|date('Y-m-d H:i:s') }}
                    {% else %}
                        crée le : {{ address.createdAt|date('Y-m-d H:i:s')}}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('admin_address_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('admin_address_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_address_new') }}">Create new</a>
{% endblock %}
