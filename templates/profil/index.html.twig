{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="profile-page">
        <h1 class="profile-title">Mon Profil</h1>

        <a href="{{ path('app_profil_edit') }}" class="btn btn-primary edit-profile-btn">Modifier mon profil</a>

        <p class="profile-info">Nom    : {{ person.lastName }}</p>
        <p class="profile-info">Prenom : {{ person.firstName }}</p>
        <p class="profile-info">Email  : {{ user.email }}</p>

        <ul>
            {% for file in person.files %}
                <li>
                    <a href="{{ path('app_file_show',{ id: person.id, name: file.realFileName}) }}" target="_blank" class="file-link">{{ file.realFileName }}</a>
                    - <span class="file-label">{{ file.label }}</span>
                    {% dump(file.realFileName|split('.')|last) %}
                    {% if file.realFileName|split('.')|last == 'pdf' %}
                        <embed src="{{ path('app_file_show', {id: person.id, name: file.realFilename}) }}" style="min-width: 100%" height="500">
                    {% else %}
                        <img src="{{ path('app_file_show', {id: person.id, name: file.realFilename}) }}" alt="Photo de profil" style="min-width: 100%">
                    {% endif %}
                    

                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}