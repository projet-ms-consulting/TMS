{% extends 'super_admin.html.twig' %}

{% block title %}Modifier le projet{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/css/array.css') }}">
{% endblock %}

{% block body %}
    <h1>Modification du projet</h1>

    {{ form_start(form) }}
    <table class="table">
        <tbody>
        <tr>
            <th>{{ form_label(form.name) }}</th>
            <td>{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.description) }}</th>
            <td>{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.participant) }}</th>
            <td>{{ form_widget(form.participant, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        </tbody>
    </table>

    <div class="btnForm">
        <a href="{{ path('super_admin_project_index') }}" class="btn btn-primary back-btn">Retour</a>
        <button id="btn-submit" class="btn btn-primary back-btn">Modifier</button>
    </div>
    {{ form_end(form) }}

    {{ include('super_admin/project/_delete_form.html.twig') }}
{% endblock %}