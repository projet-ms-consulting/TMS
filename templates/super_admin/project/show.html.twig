{% extends 'super_admin.html.twig' %}

{% block title %}Détail d'un projet{% endblock %}

{% block body %}
    <h1>Détails du projet {{ project.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Participants</th>
                <td>
                {% for participant in project.participant %}
                    {{ participant.fullName }}<br>
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Liens</th>
                <td>
                {% for link in project.links %}
                    {{ link.label }} : <a href="{{ link.link }} " target="_blank">{{ link.link }}</a>{{ include('super_admin/links/_delete_form.html.twig') }}<br>
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ project.updatedAt ? project.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('super_admin_project_index') }}">Retour</a>

    <a href="{{ path('super_admin_project_edit', {'id': project.id}) }}">Modifier</a>

    {{ include('super_admin/project/_delete_form.html.twig') }}
{% endblock %}
