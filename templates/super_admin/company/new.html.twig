{% extends 'super_admin.html.twig' %}

{% block title %}Créer une entreprise{% endblock %}

{% block body %}
    <h1>Créer une entreprise</h1>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.companyType, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.nbStreet, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.street, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.zipCode, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.employeeNumber, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="center-btn-container">
        <button type="submit" class="btn btn-primary">Créer</button>
    </div>
    {{ form_end(form) }}

    <a href="{{ path('super_admin_app_company_index') }}">Retour à la liste</a>
{% endblock %}