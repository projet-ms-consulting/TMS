{% extends 'super_admin.html.twig' %}

{% block title %}Détails de l'entreprise{% endblock %}

{% block body %}
    <h1>Détails de l'entreprise</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ company.name }}</td>
        </tr>
        <tr>
            <th>Type d'entreprise</th>
            <td>{{ company.companyType }}</td>
        </tr>
        <tr>
            <th>Date de création</th>
            <td>{{ company.createdAt ? company.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Date de mise à jour</th>
            <td>{{ company.updatedAt ? company.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Nombre d'employés</th>
            <td>{{ company.employeeNumber }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('super_admin_app_company_index') }}">Retour à la liste</a>

    <a href="{{ path('super_admin_app_company_edit', {'id': company.id}) }}">Modifier</a>

    {{ include('super_admin/company/_delete_form.html.twig') }}
{% endblock %}