{% extends 'super_admin.html.twig' %}

{% block title %}Détails de l'employé d'école{% endblock %}

{% block body %}
    <h1>{{ personne.firstName }} {{ personne.lastName | upper }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom : </th>
                <td>{{ personne.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom : </th>
                <td>{{ personne.firstName }}</td>
            </tr>
                <tr>
                    <th>Email de contact : </th>
                        {% if personne.mailContact is not null %}
                            <td>{{ personne.mailContact }}</td>
                        {% else %}
                            <td>Non renseigné</td>
                        {% endif %}
                </tr>
            {% if personne.user %}
                <tr>
                    <th>Email de connexion : </th>
                    <td>{{ personne.user.email}}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Ecole de référence : </th>
                <td>{{ personne.school.name}}</td>
            </tr>
            <tr>
                <th>Adresse de l'école : </th>
                <td>{{ personne.school.address.fullAddress }}</td>
            </tr>
            <tr>
                <th>Créé le :</th>
                <td>{{ personne.createdAt ? personne.createdAt|date('d/m/Y')}}</td>
            </tr>
            {% if personne.updatedAt is not null %}
                <tr>
                    <th>Mis à jour le : </th>
                    <td>{{ personne.updatedAt ? personne.updatedAt|date('d/m/Y')}}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
<div class="center-btn-container">
    <a href="{{ path('super_admin_app_school_employee_index') }}" class="btn btn-primary back-btn">Retour</a>
    <a href="{{ path('super_admin_app_school_employee_edit', {'id': personne.id}) }}" class="btn btn-primary back-btn">Modifier</a>
</div>
    {{ include('super_admin/school_employee/_delete_form.html.twig') }}
{% endblock %}
