{% extends 'super_admin.html.twig' %}

{% block title %}Person index{% endblock %}

{% block body %}
    <h1>Liste des personnes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Ecole de référence</th>
                <th>Adresse de l'école</th>
                <th>Date de mise à jour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <tr>
            {% for person in persons %}
                {% if person is defined %}
                    <td>{{ person.lastName }}</td>
                    <td>{{ person.firstName }}</td>
                    <td>{{ person.school.name }}</td>
                    <td>{{ person.school.address.fullAddress }}</td>
                    <td>{{ person.updatedAt ? person.updatedAt|date('d/m/Y')}}</td>
                    <td>
                        <a href="{{ path('super_admin_app_school_employee_show', {'id': person.id}) }}">Voir</a>
                        <a href="{{ path('super_admin_app_school_employee_edit', {'id': person.id}) }}">Modifier</a>
                    </td>
                {% else %}
                    <td colspan="8">Aucun enregistrement ! </td>
                {% endif %}
            {% endfor %}
        </tr>
        </tbody>
    </table>



{% endblock %}
