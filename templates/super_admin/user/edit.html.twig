{% extends 'super_admin.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
{#    <h1>Modifier {{ person.firstName }} {{ person.lastName | upper}}</h1>#}

    {{ form_start(form) }}
    <table class="table">
        <tbody>
        <tr>
            <th>Email : </th>
            <td>{{ form_widget(form.email) }}</td>
        </tr>
        <tr>
            <th>Mot de passe : </th>
            <td>{{ form_widget(form.password) }}</td>
        </tr>
        <tr>
            <th>Rôle : </th>
            <td>{{ form_widget(form.roles) }}</td>
        </tr>
        <tr>
            <td colspan="2">
                <button class="btn">Créer</button>
            </td>
        </tr>
    </table>
    {{ form_end(form) }}

    <a href="{{ path('super_admin_app_person_index') }}">Retour à la liste des personnes</a>

    {{ include('super_admin/user/_delete_form.html.twig') }}
{% endblock %}
