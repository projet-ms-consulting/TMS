{% extends 'super_admin.html.twig' %}

{% block title %}Modifier une personne{% endblock %}

{% block body %}
    <h1>Modifier une personne</h1>

    {{ form_start(personForm) }}
    <table class="table">
        <tr>
            <th>Nom</th>
            <td>{{ form_widget(personForm.lastName) }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ form_widget(personForm.firstName) }}</td>
        </tr>
        <tr>
            <th>Date début de stage</th>
            <td>{{ form_widget(personForm.startInternship) }}</td>
        </tr>
        <tr>
            <th>Date fin de stage</th>
            <td>{{ form_widget(personForm.endInternship) }}</td>
        </tr>
        <tr>
            <th>École</th>
            <td>{{ form_widget(personForm.school) }}</td>
        </tr>
        <tr>
            <th>Ajouter un CV</th>
            <td>{{ form_widget(personForm.cv) }}</td>
        </tr>
        <tr>
            <th>Ajouter une lettre de motivation</th>
            <td>{{ form_widget(personForm.coverLetter) }}</td>
        </tr>
        <tr>
            <th>Ajouter une convention de stage</th>
            <td>{{ form_widget(personForm.internshipAgreement) }}</td>
        </tr>
        <tr>
            <td colspan="2">
                <button class="btn">Enregistrer</button>
            </td>
        </tr>
    </table>
    {{ form_end(personForm) }}

    <a href="{{ path('super_admin_app_person_index') }}">Retour à la liste</a>

    {{ include('super_admin/person/_delete_form.html.twig') }}
{% endblock %}
