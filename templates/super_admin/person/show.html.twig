{% extends 'super_admin.html.twig' %}

{% block title %}Personne{% endblock %}

{% block body %}
    <h1>{{ personne.firstName }} {{ personne.lastName | upper }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom : </th>
                <td>{{ personne.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom : </th>
                <td>{{ personne.firstName }}</td>
            </tr>
            <tr>
                {% if personne.user %}
                    <th>Email : </th>
                    <td>{{ personne.user.email }}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Créé le :</th>
                <td>{{ personne.createdAt ? personne.createdAt|date('d/m/Y H:i')}}</td>
            </tr>
            <tr>
                {% if personne.updatedAt is not defined %}
                    <th>Mis à jour le : </th>
                    <td>{{ personne.updatedAt ? personne.updatedAt|date('d/m/Y H:i')}}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Documents : </th>
                {% if person.files is empty %}
                    <td>Pas de document</td>
                {% else %}
                    <td>
                        {% for file in person.files %}
                            <a href="{{ path('super_admin_app_person_show_file', {id: file.id}) }}" target="_blank">{{ file.label }}</a>
                        {% endfor %}
                    </td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('super_admin_app_person_index') }}">Retour</a>

    {% if personne.user %}
        <a href="{{ path('super_admin_app_person_edit', {'id': personne.id}) }}">Modifier</a>
    {% else %}
        <a href="{{ path('super_admin_app_person_edit', {'id': personne.id}) }}">Modifier</a>
    {% endif %}

    {{ include('super_admin/person/_delete_form.html.twig') }}
{% endblock %}
