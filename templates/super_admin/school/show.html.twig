{% extends 'super_admin.html.twig' %}

{% block title %}Détails de l'école{% endblock %}

{% block body %}
    <h1>École</h1>
    <h2>{{ school.name }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ school.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>
                    {% if school.address is defined %}
                        <a href="{{ path('super_admin_address_show', {'id': school.address.id}) }}">{{ school.address.fullAddress }}</a>
                    {% else %}
                        <b style="color: red">Aucune adresse</b>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>
                    {% if school.updatedAt != null %}
                        {{ school.updatedAt|date('Y-m-d H:i:s') }}
                    {% else %}
                        crée le : {{ school.createdAt|date('Y-m-d H:i:s')}}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
<div class="btnForm">
    <a href="{{ path('super_admin_app_school_index') }}" class="btn-custom">Retour</a>
    <a href="{{ path('super_admin_app_school_edit', {'id': school.id}) }}" class="btn-custom">Modifier</a>
</div>
    {{ include('super_admin/school/_delete_form.html.twig') }}
{% endblock %}
