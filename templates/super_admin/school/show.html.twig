{% extends 'super_admin.html.twig' %}

{% block title %}School{% endblock %}

{% block body %}
    <h1>School</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ school.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ school.name }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>
                    {% if school.address is defined %}
                        <a href="{{ path('super_admin_address_show', {'id': school.address.id}) }}">{{ school.address.fullAddress }}</a>
                    {% else %}
                        <b style="color: red">Aucune addresse</b>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>
                    {% if school.updatedAt != null %}
                        {{ school.updatedAt|date('Y-m-d H:i:s') }}
                    {% else %}
                        crée le : {{ school.createdAt|date('Y-m-d H:i:s')}}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('super_admin_school_index') }}">back to list</a>

    <a href="{{ path('super_admin_school_edit', {'id': school.id}) }}">edit</a>

    {{ include('super_admin/school/_delete_form.html.twig') }}
{% endblock %}
