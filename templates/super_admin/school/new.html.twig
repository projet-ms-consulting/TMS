{% extends 'super_admin.html.twig' %}

{% block title %}New School{% endblock %}

{% block body %}
    <h1>Créer une école</h1>

    {{ form_start(form) }}
        <table class="table">
            <tbody>
                <tr>
                    <th>{{ form_label(form.name) }}</th>
                    <td>{{ form_widget(form.name) }}</td>
                </tr>
                <tr>
                    <th>{{ form_label(form.address) }}</th>
                    <td>{{ form_widget(form.address) }}</td>
                </tr>
        </table>
    <div class="btnForm">
        <a href="{{ path('super_admin_school_index') }}" class="btn-custom">Retour</a>
        <button class="btn-custom">Créer</button>
    </div>
    {{ form_end(form) }}

    <a href="{{ path('super_admin_address_new') }}" class="btn-custom">Ajouter une adresse</a>
{% endblock %}
