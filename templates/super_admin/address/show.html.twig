{% extends 'super_admin.html.twig' %}

{% block title %}Détails de l'adresse{% endblock %}

{% block body %}
    <h1>Adresse</h1>

    <table class="table table-show">
        <tbody>
            <tr>
                <th>Numéro de rue</th>
                <td>{{ address.nbStreet }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ address.street }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ address.zipCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ address.city }}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{% if address.updatedAt != null %}
                        {{ address.updatedAt|date('Y-m-d H:i:s') }}
                    {% else %}
                        créé le : {{ address.createdAt|date('Y-m-d H:i:s')}}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="button-container">
        <a href="{{ path('super_admin_address_index') }} " class="btn btn-primary back-btn" >Retour</a>
        <a href="{{ path('super_admin_address_edit', {'id': address.id}) }}" class="btn btn-primary back-btn">Modifier</a>
    </div>

    {{ include('super_admin/address/_delete_form.html.twig') }}
{% endblock %}
