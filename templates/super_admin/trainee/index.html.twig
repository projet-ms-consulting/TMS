{% extends 'super_admin.html.twig' %}

{% block title %}Index Stagiaire{% endblock %}

{% block body %}
    <h1>Liste des personnes stagiaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Ecole</th>
                <th>Référent école</th>
                <th>Entreprise</th>
                <th>Référent entreprise</th>
                <th>Manager</th>
                <th>Date début de stage</th>
                <th>Date fin de stage</th>
                <th>Date de modification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in persons %}
            {% if person is defined %}
            <tr>
                <td>{{ person.lastName }}</td>
                <td>{{ person.firstName }}</td>
                <td>{{ person.school.name }}</td>
                {% if person.schoolSupervisor is defined and person.schoolSupervisor is not null%}
                    <td>{{ person.schoolSupervisor.firstName }} {{ person.schoolSupervisor.lastName }}</td>
                {% else %}
                    <td>Pas de référent école</td>
                {% endif %}
                <td>{{ person.company.name }}</td>
                {% if person.internshipSupervisor is defined and person.internshipSupervisor is not null %}
                    <td>{{ person.internshipSupervisor.firstName }} {{ person.internshipSupervisor.lastName }}</td>
                {% else %}
                    <td>Pas de référent stage</td>
                {% endif %}
                {% if person.manager is defined and person.manager is not null %}
                    <td>{{ person.manager.firstName }} {{ person.manager.lastName }}</td>
                {% else %}
                    <td>Pas de Manager</td>
                {% endif %}
                <td>{{ person.startInternship ? person.startInternship|date('d/m/Y')}}</td>
                <td>{{ person.endInternship ? person.endInternship|date('d/m/Y')}}</td>
                <td>{{ person.updatedAt ? person.updatedAt|date('d/m/Y')}}</td>
                <td>
                    <a href="{{ path('super_admin_app_trainee_show', {'id': person.id}) }}">Voir</a>
                    <a href="{{ path('super_admin_app_trainee_edit', {'id': person.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun enregistrement ! </td>
            </tr>
        {% endif %}
        {% endfor %}
        </tbody>
    </table>




{% endblock %}
