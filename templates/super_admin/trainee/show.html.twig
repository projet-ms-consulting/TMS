{% extends 'super_admin.html.twig' %}

{% block title %}Person{% endblock %}

{% block body %}
    <h1>{{ personne.firstName }} {{ personne.lastName | upper}}</h1>
    <h2>Stagiaire</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom : </th>
                <td>{{ personne.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom : </th>
                <td>{{ personne.firstName }}</td>
            </tr>
            <tr>
                <th>Date de début de stage</th>
                <td>{{ personne.startInternship ? personne.startInternship|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin de stage</th>
                <td>{{ personne.endInternship ? personne.endInternship|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Créé le :</th>
                <td>{{ personne.createdAt ? personne.createdAt|date('d/m/Y')}}</td>
            </tr>
            <tr>
                <th>Mis à jour le : </th>
                <td>{{ personne.updatedAt ? personne.updatedAt|date('d/m/Y')}}</td>
            </tr>
        </tbody>
    </table>
<div class="btnForm">
    <a href="{{ path('super_admin_app_person_index') }}" class="btn-custom">Retour</a>
    <a href="{{ path('super_admin_app_person_edit', {'id': person.id}) }}" class="btn-custom">Modifier</a>
</div>
