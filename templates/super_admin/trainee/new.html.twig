{% extends 'super_admin.html.twig' %}

{% block title %}Ajout stagiaire{% endblock %}

{% block body %}
    <h1>Informations Stagiaire</h1>
{{ form_start(traineeForm) }}
    <table class="table">
        <tbody>
            <tr>
                <th>Date de début de stage</th>
                <td>{{ form_widget(traineeForm.startInternship) }}</td>
            </tr>
            <tr>
                <th>Date de fin de stage</th>
                <td>{{ form_widget(traineeForm.endInternship) }}</td>
            </tr>
            <tr>
                <th>Ecole : </th>
                <td>{{ form_widget(traineeForm.school) }}</td>
            </tr>
            <tr>
                <th>Responsable d'école : </th>
                <td>{{ form_widget(traineeForm.person.schoolSupervisor.firstName) }}</td>
            </tr>
            <tr>
                <td colspan="2">
                    <button class="btn">Créer</button>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('super_admin_app_person_index') }}">Retour</a>

{#    {{ include('super_admin/person/_delete_form.html.twig') }}#}
{% endblock %}
