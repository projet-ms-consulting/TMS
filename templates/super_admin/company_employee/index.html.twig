{% extends 'super_admin.html.twig' %}

{% block title %}Employés d'entreprise{% endblock %}

{% block body %}
    <h1>Liste des employés d'entreprise</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Entreprise</th>
                <th>Rôle</th>
                <th>Date de mise à jour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            {% if is_granted('ROLE_ADMIN', person.getUser) or is_granted('ROLE_INTERNSHIP_SUPERVISOR', person.getUser) %}
                <tr>
                    <td>{{ person.lastName }}</td>
                    <td>{{ person.firstName }}</td>
                    <td>{{ person.company.name }}</td>
                    {% if is_granted('ROLE_ADMIN', person.getUser) %}
                        <td>Manager</td>
                    {% elseif is_granted('ROLE_INTERNSHIP_SUPERVISOR', person.getUser) %}
                        <td>Superviseur interne</td>
                    {% else %}
                        <td>-</td>
                    {% endif %}
                    <td>{{ person.updatedAt ? person.updatedAt|date('d/m/Y') }}</td>
                    <td>
                        <a href="{{ path('super_admin_app_company_employee_show', {'id': person.id}) }}">Voir</a>
                        {% if is_granted('ROLE_ADMIN', person.getUser) %}
                            <a href="{{ path('super_admin_app_company_employee_edit', {'id': person.id}) }}">Modifier</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucun enregistrement ! </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>




{% endblock %}
