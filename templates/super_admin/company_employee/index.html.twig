{% extends 'super_admin.html.twig' %}

{% block title %}Employés d'entreprise{% endblock %}

{% block body %}
    <h1>Liste des employés d'entreprise</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Entreprise</th>
                <th>Rôle</th>
                <th>Date de mise à jour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in persons %}
            {% if person is defined %}
                <tr>
                    <td>{{ person.lastName }}</td>
                    <td>{{ person.firstName }}</td>
                    <td>{{ person.company.name }}</td>
                    {% if person.user.roles[0]=='ROLE_ADMIN' %}
                        <td>Manager</td>
                    {% else %}
                        <td>Superviseur interne</td>
                    {% endif %}
                    <td>{{ person.updatedAt ? person.updatedAt|date('d/m/Y') }}</td>
                    <td>
                        <a href="{{ path('super_admin_app_company_employee_show', {'id': person.id}) }}">Voir</a>
                            <a href="{{ path('super_admin_app_company_employee_edit', {'id': person.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun enregistrement ! </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>




{% endblock %}
